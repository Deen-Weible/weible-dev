const {
  title = "Unnamed Blog",
  link = "/blog/markdown-style-guide/",
  heroImage = "/placeholder.jpg",
  updatedDate = "Jan 1, 1984",
} = Astro.props;
// heroImage = heroImage.slice(0, -1) + '.jpg' + heroImage.slice(-1)
---
<!-- Styles -->
<style>
/* html {
  background: #f5f7f8;
  font-family: system-ui;
  -webkit-font-smoothing: antialiased;
  padding: 20px 0;
} */

header {
  width: 90%;
  max-width: 1240px;
  margin: 0 auto;
}

.band {
  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: auto;
  grid-gap: 20px;

  @media (min-width: 30em) {
    grid-template-columns: 1fr 1fr;
  }

  @media (min-width: 60em) {
    grid-template-columns: repeat(4, 1fr);
  }
}

.card {
  overflow: hidden;
  border-radius: 16px;
  background: white;
  text-decoration: none;
  color: #444;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  min-height: 100%;
  /* width: min(45rem, 90vw); */

  &:hover {
    top: -2px;
    box-shadow: 0 4px 5px rgba(0, 0, 0, 0.2);
  }

  article {
    padding: 20px;
    flex: 1;

    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  h1 {
    font-size: 20px;
    margin: 0;
    color: #333;
  }

  p {
    flex: 1;
    line-height: 1.4;
  }

  span {
    font-size: 1.25rem;
    font-weight: bold;
    color: #999;
    text-transform: uppercase;
    letter-spacing: 0.05em;
	border-bottom: 3px solid var(--accent);
  }

  .thumb {
    padding-bottom: 60%;
    background-size: cover;
    background-position: center center;
  }
}

.card-div {
  border-radius: 100px;
  height: 100%;
  min-width: min(300px, 95vw);
  width: min(calc(27.5rem + 0.5vw), 95vw);
  box-shadow: var(--box-shadow);
}
</style>

<!-- HTML -->
<div class="card-div">
  <a href={`${link}`} class="card">
    <div class="thumb" style={`background-image: url(${heroImage});`}></div>
    <article>
      <h1>{title}</h1>
      <span>{updatedDate}</span>
    </article>
  </a>
</div>
